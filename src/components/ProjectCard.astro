---
import { Image } from 'astro:assets';

const props = Astro.props;
const titleId = props.frontmatter.title?.replace(/[^a-zA-Z0-9]/g, "-").toLowerCase();
---

<div class="card" data-url={props.url}>
    <div class="card-image">
        <Image src={`/${props.frontmatter.image}`} alt={props.frontmatter.title} height={100} width={100}/>
    </div>
    <div class="card-content">
        <strong transition:name={`title-${titleId}`}>{props.frontmatter.title}</strong>
        <div class="description">{props.frontmatter.description}</div>
        <div class="tags">
            {props.frontmatter.tags?.map((tag: string) => (
                <span class="tag">{tag}</span>
            ))}
        </div>
    </div>
    
</div>

<script>
    import { navigate } from "astro:transitions/client";
    
    function attachCardListeners() {
        const cards = document.querySelectorAll(".card[data-url]");
        
        cards.forEach(card => {
            card.removeEventListener("click", handleCardClick);
            card.addEventListener("click", handleCardClick);
        });
    }
    
    function handleCardClick(event: Event) {
        const target = event.currentTarget as HTMLElement;
        const url = target.getAttribute("data-url");
        if (url) {
            navigate(url);
        }
    }
    
    attachCardListeners();
    
    document.addEventListener("astro:page-load", attachCardListeners);
</script>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap");

    .card {
        cursor: pointer;
        display: flex;
        flex-direction: row;
        margin: 20px;
        background-color: white;
        border: rgb(235, 235, 235) solid 1px;
        border-radius: 10px;
        transition: 0.7s;
        overflow: hidden;
        height: 160px;
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(36, 34, 34, 0.2);
        transition: 0.2s;
    }

    .card-image {
        flex: 0 0 250px;
        height: 100%;
        overflow: hidden;
        position: relative;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .card-content {
        flex-grow: 1;
        padding: 20px;
        margin: 5px;
    }

    .description {
        margin: 15px 0;
    }

    .tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin: 10px 0px 20px;
    }

    .tag {
        background-color: #fef3eb;
        border: 1px solid #ddd;
        border-radius: 50px;
        padding: 4px 12px;
        font-size: 0.85em;
        color: #666;
        transition: 0.7s;
        font-family: "Inter", sans-serif;
    }

    .tag:hover {
        background-color: #ddd;
        transition: 0.2s;
    }

    @media (max-width: 820px) {
        .card {
            flex-direction: column;
            height: auto;
        }

        .card-image {
            flex: 0 0 120px;
            height: 120px;
            width: 100%;
        }

        .card-content {
            padding: 15px;
        }

        .tags {
            margin: 10px 0 10px;
        }
    }
</style>