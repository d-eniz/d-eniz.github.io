---
import { Image } from 'astro:assets';
import Stars from './Stars.astro';

const props = Astro.props;
const titleId = props.frontmatter.title?.replace(/[^a-zA-Z0-9]/g, "-").toLowerCase();

import "../styles/global.css"
---

<div class="card" data-url={props.url}>
    <div class="card-image">
        <Image transition:name={`img-${titleId}`} src={`/${props.frontmatter.image}`} alt={props.frontmatter.title} height={100} width={100}/>
    </div>
    <div class="card-content">
        <span class="title-line">
            <strong transition:name={`title-${titleId}`}>{props.frontmatter.title}</strong>
            {props.frontmatter.repo && <Stars owner="d-eniz" repo={props.frontmatter.repo} />}
        </span>
        <div transition:name={`desc-${titleId}`} class="description">{props.frontmatter.description}</div>
        <div transition:name={`tags-${titleId}`} class="tags">
            {props.frontmatter.tags?.map((tag: string) => (
                <span class="tag">{tag}</span>
            ))}
        </div>
    </div>
    
</div>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap");

    .card {
        cursor: pointer;
        display: flex;
        flex-direction: row;
        margin: 20px;
        background-color: white;
        border: rgb(235, 235, 235) solid 1px;
        border-radius: 10px;
        transition: 0.7s;
        overflow: hidden;
        height: 160px;
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(36, 34, 34, 0.2);
        transition: 0.2s;
    }

    .card-image {
        flex: 0 0 250px;
        height: 100%;
        overflow: hidden;
        position: relative;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .card-content {
        flex-grow: 1;
        padding: 20px;
        margin: 5px;
        font-size: 1.1em;
    }

    .title-line {
        display: flex;
        align-items: center;
        gap: 8px;
        flex-wrap: wrap;
    }


    .description {
        margin: 15px 0;
    }

    @media (max-width: 820px) {

        .card {
            flex-direction: column;
            height: auto;
        }

        .card-image {
            flex: 0 0 250px;
            height: 100%;
            width: 100%;
        }

        .card-content {
            padding: 15px;
        }

        .tags {
            margin: 10px 0 10px;
        }
    }
</style>