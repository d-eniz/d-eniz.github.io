---
import MainLayout from "../layouts/MainLayout.astro";
import ProjectSection from "../components/ProjectSection.astro";
import Typewriter from "astro-typewriter";

import { Image } from 'astro:assets';
import profile_pic from "../../public/deniz.png"

const posts_academic = Object.values(import.meta.glob("./posts/academic/*.md", {eager: true}));
const posts_personal = Object.values(import.meta.glob("./posts/personal/*.md", {eager: true}));

---
<MainLayout>

	<div class="about">
		<div class="profile">
			<Image src={profile_pic} alt="Deniz Terzioglu" width={250} height={250} />
			<div>
				<Typewriter
					messages={["Hi, I'm Deniz"]}
					waitWritten={9**9}
					writeSpeed={150}
					style="font-weight: bold; font-size: 3em"
				/>
				<p style="font-size: 1.2em">
					I’m a developer with a background in biomedical engineering who enjoys building tools that make complex workflows simpler. 
					I work mainly with <strong>TypeScript</strong>, <strong>React</strong>, and <strong>Python</strong>, and I care about writing code that’s <strong>maintainable</strong> and easy for others to build on.
				</p>
			</div>
			
		</div>
	</div>

	<section id="projects">
		<ProjectSection title="Personal Projects" posts={posts_personal} />
		<ProjectSection title="Academic Projects" posts={posts_academic} />
	</section>
	
</MainLayout>

<style>
	.about {
		margin: 170px 0 200px 0;
	}

	.profile {
		display: flex;
		align-items: center;
		gap: 30px;
		margin: 20px;
	}

	.profile img {
		border-radius: 10px;
		flex-shrink: 0;
	}

	@media (max-width: 1000px) {
		.profile {
			flex-direction: column;
			text-align: center;
			gap: 20px;
		}

		.profile h1 {
			font-size: 2rem;
		}
	}
</style>